<div class= "container">

  <h1 class= "main-title">Featured Products:</h1>

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @products.each_with_index do |product, i| %>
        <li data-target="#carouselExampleIndicators" data-slide-to=#{i) class="#{'active' if i == 0}"></li>
      <% end %>
    </ol>

    <div class="carousel-inner">
      <% @products.each do |product| %>
        <div class="carousel-item <%= "active" if product == @products.first %>">
          <%= image_tag(product.image_url, class: "img-fluid prod-image") unless product.image_url.nil? %>
          <div class="carousel-caption d-none d-md-block">
            <%= product.name %>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class= "admin-div">
    <p>Admin<p>
    <p>Go to <%= link_to 'Orders', orders_path %></p>
  </div>
</div>
