<div class= "container">
  <h1 class = "main-title">Contact us</h1>
  <h5 class= "contact-h5">We believe in recycling and creativity. We're artistic mechanics, with safety measures. </h5>
  <%= flash[:notice] %>
  <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true, class: "contact-form") do |form| %>
  <div class="row">
      <div class="form-group col-12">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Your Name" %>
      </div>
      <div class="form-group col-12">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "Your E-mail" %>
      </div>
      <div class="form-group col-12">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", placeholder: "Your Message", rows: 5 %>
      </div>
  </div>
  <%= form.submit "Send", class: "form_label contact-btn" %>
  <% end %>
</div>
