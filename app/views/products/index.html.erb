<div class= "page-wrap container">
  <p id="notice"><%= notice %></p>

  <h1 class= "main-title">Products</h1>

<div>
    <table class= "products-table">
      <thead>
        <tr>
          <th class= "products-th">Name</th>
          <th class= "products-th">Description</th>
          <th class= "products-th">Image url</th>
          <th colspan="3"></th>
        </tr>

      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td class= "td-result"><%= product.name %></td>
            <td class= "td-result"><%= product.description %></td>
            <td class= "td-result"><%= product.image_url %></td>
            <td><%= link_to 'Show', product, :class=> "show-td td-btn" %></td>
            <td><%= link_to 'Edit', edit_product_path(product), :class=> "td-btn" %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "td-btn"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <button type="button" class="new-prod-btn"><%= link_to 'Create a new product', new_product_path %></button>
  </div>
</div>
