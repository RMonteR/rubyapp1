
    <% @comments.each do |comment| %>
      <p class="product-reviews"><%= comment.user.first_name || "unknown" %> <small><em><%= " #{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
      <p class="rated" data-score="<%= comment.rating %>"></p>
      <p>Review: "<%= comment.body %>"</p>
      <hr>
    <% end %>
