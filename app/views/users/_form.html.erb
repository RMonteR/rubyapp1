<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="field">
      <div class="col"> <%= form.label :first_name %> </div>
      <div class="col"> <%= form.text_field :first_name, class: "input-field" %> </div>
    </div>
  </div>
  <div class= "row">
    <div class="field">
      <div class="col"> <%= form.label :last_name %> </div>
      <div class="col"> <%= form.text_field :last_name, class: "input-field" %> </div>
    </div>
  </div>
  <div class= "row">
    <div class="field">
       <div class="col"><%= form.label :email %> </div>
       <div class="col"><%= form.text_field :email, class: "input-field" %> </div>
    </div>
  </div>

  <div class= "row">
    <div class="field">
      <%= form.label :password %> <br>
      <%= form.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
